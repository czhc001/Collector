                    app:layout_constraintTop_toTopOf="@id/tv_gyr"
                    app:layout_constraintBottom_toBottomOf="@id/tv_gyr">
                </Spinner>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text=""
                    android:textSize="22sp"
                    app:layout_constraintStart_toEndOf="@id/spinner_gyr"
